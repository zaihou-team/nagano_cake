<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">商品一覧</h2>
    <%= link_to "+ 商品登録", new_admin_item_path, class: "fs-4 fw-bold text-success text-decoration-none px-3 py-2 border border-success rounded" %>
  </div>

  <table class="table table-bordered table-hover text-center align-middle">
    <thead class="table-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to item.name, admin_item_path(item.id), class: "text-dark fw-bold" %>
          </td>
          <td><%= item.price.to_s(:delimited) %></td>
          <td><%= item.genre.genre_name %></td>
          <td>
            <span class="<%= item.is_active ? 'text-success fw-bold' : 'text-secondary fw-bold' %>">
              <%= item.is_active ? '販売中' : '販売停止' %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <div class="d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>
