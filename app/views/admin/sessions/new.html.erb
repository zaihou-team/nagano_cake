<h2 class="text-center mb-4">ログイン</h2>

<div class="container d-flex justify-content-center">
  <div class="card shadow-sm p-4" style="width: 400px;">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), method: :post) do |f| %>
        
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
          </div>
        <% end %>

        <div class="mt-3">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= render "admin/shared/links" %>
