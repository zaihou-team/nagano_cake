<div class="container mt-4">
  <h3 class="fw-bold border-bottom pb-2 mb-4 text-center">ジャンル編集</h3>

  <div class="d-flex justify-content-center">
    <div class="w-50">
      <%= form_with model: [:admin, @genre] do |f| %>
        <div class="mb-4 d-flex align-items-center">
          <label class="fw-bold me-3">ジャンル名</label>
          <%= f.text_field :genre_name, class: "form-control", style: "width: 200px;" %>
        </div>
        <div class="text-center">
          <%= f.submit '変更を保存', class: "btn btn-success px-4 py-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
