<div class="container mt-4">
  <h3 class="fw-bold border-bottom pb-2 mb-4 text-center">ジャンル一覧・追加</h3>

  <div class="d-flex justify-content-between align-items-center mb-4 p-3 border rounded bg-light">
    <%= form_with model: [:admin, @genre], local: true do |f| %>
      <div class="d-flex align-items-center">
        <label class="fw-bold me-2">ジャンル名</label>
        <%= f.text_field :genre_name, class: "form-control", placeholder: "ジャンル名", style: "width: 200px;" %>
        <%= f.submit '新規登録', class: "btn btn-success ms-3" %>
      </div>
    <% end %>
  </div>

  <table class="table align-middle border">
    <thead class="table-light">
      <tr>
        <th class="py-3">ジャンル</th>
        <th class="py-3 text-end"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td class="py-3"><%= genre.genre_name %></td>
          <td class="py-3 text-end">
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
