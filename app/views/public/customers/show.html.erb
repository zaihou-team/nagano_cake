<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow-sm border-0">
        <div class="card-body">
          <h3 class="fw-bold text-center mb-4">マイページ</h3>
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="fw-bold mb-0">登録情報</h5>
            <%= link_to '編集する', infomation_edit_path, class: "btn btn-outline-success rounded-pill px-4" %>
          </div>
          <hr>
          <div class="mt-3">
            <p><span class="fw-bold">名前:</span> <%= @customer.last_name %> <%= @customer.first_name %></p>
            <p><span class="fw-bold">住所:</span> <%= @customer.postal_code %> <%= @customer.address %></p>
            <p><span class="fw-bold">電話番号:</span> <%= @customer.phone_number %></p>
            <p><span class="fw-bold">メールアドレス:</span> <%= @customer.email %></p>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <%= link_to '📦 配送先一覧', addresses_path, class: "btn btn-outline-primary rounded-pill px-4" %>
            <%= link_to '🛒 注文履歴', orders_path, class: "btn btn-outline-primary rounded-pill px-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
