<%- if controller_name != 'sessions' %>
  <%= link_to (local_assigns[:link_text] || "Log in"), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to (local_assigns[:signup_text] || "Sign up"), new_registration_path(resource_name), class: "text-primary" %><br />
<% end %>